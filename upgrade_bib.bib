@article{baldaranovLongitudinalDiffusionTensor2017,
	title = {Longitudinal {Diffusion} {Tensor} {Imaging}-{Based} {Assessment} of {Tract} {Alterations}: {An} {Application} to {Amyotrophic} {Lateral} {Sclerosis}},
